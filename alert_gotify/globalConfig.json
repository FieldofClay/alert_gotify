                        {
                            "type": "text",
                            "label": "Gotify Server URL",
                            "field": "gotify_url",
                            "help": "The base URL of your Gotify server (e.g., https://gotify.example.com)",
                            "required": false,
                            "validators": [
                                {
                                    "type": "string",
                                    "minLength": 0,
                                    "maxLength": 500
                                }
                            ]
                        },
                        {
